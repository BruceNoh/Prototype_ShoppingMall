<% include ./header.ejs %>
    
    
    
    <br/>   
    

    <div class="col-lg-12">
        <div class="container" style="padding-top:15px;">
        <div class="container" id="masonry_container">
            <% products.forEach(function(product){ %>
            <div class="masonry-grid" align="center"><br/>
                <a href="/products/<%=product.id%>">
                    <%if(product.thumbnail){%>
                        <div class="imgeffect">
                            <div class="scale">
                                <img width="250" height="300" src="/uploads/<%=product.thumbnail%>">
                            </div>
                        </div>
                    <%}%>
                    <p>
                        <div class="rightDiv"></h6><%=product.productname%></h6></div>   
                    </p>
                </a><h6 class="h6"><%=product.getAmountFormat%>원</h6><br/>
            </div> 
            <%});%>
        </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
          <div class="col-lg-12" align="center">
                <!-- 페이징 처리 -->
                <nav>
                    <ul class="pagination">
                        <li>
                            <a href="<%= paginate.href(true) %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% pages.forEach(function(page){ %>
                        <li class="<%= paginate.page == page.number ? 'active' : ''%>">
                            <a href="<%= page.url %>"><%= page.number %></a>
                        </li>
                    <%})%>
                    <%if(paginate.hasNextPages(pageCount)){%>
                        <li>
                            <a href="<%= paginate.href() %>">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <%}%>
                    </ul>
                </nav>
          </div>
        </div>
      </div>
    
        

<style type="text/css">
.masonry-grid img { max-width: 260px; }
</style>
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/4.1.1/imagesloaded.pkgd.min.js"></script>
<script type="text/javascript">
    var $masonry_container = $('#masonry_container');
    $masonry_container.imagesLoaded(function(){
      $masonry_container.masonry({
        itemSelector : '.masonry-grid',
        columnWidth : 270
      });
    });
</script>


