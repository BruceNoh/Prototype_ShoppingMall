<% include ../header.ejs %>


    <div class="col-lg-12">
        <div class="container" style="padding-top:15px;">
            <h3 className="page-header">장바구니</h3>
                <table class="table table-bordered table-hover">
                    <tr>
                        <th></th>
                        <th>제품명</th>
