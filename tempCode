                                <!-- 리플 출력영역 -->
                                &nbsp;&nbsp;&nbsp;   
                                <% reples.forEach(function(reples){ %>                             
                                    <% if(reples.comments_id == comment.id){ %>
                                        <br/>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;리플&nbsp;
                                        <%= reples.content %>
